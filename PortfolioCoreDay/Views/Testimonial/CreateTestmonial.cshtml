@model PortfolioCoreDay.Entities.Testimonial
@{
    ViewData["Title"] = "CreateTestmonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Referans Girişi</h1>

<form method="post">
<label>Ad Soyad</label>
	<input type="text" asp-for="NameSurname" class="form-control" style="border:1px solid black;" />
	<br />
	<label>Referans Ünvan</label>
	<input type="text" asp-for="Title" class="form-control" style="border:1px solid black;" />
	<br />
	<label>Görsel URL</label>
	<input type="text" asp-for="İmageUrl" class="form-control" style="border:1px solid black;" />
	<br />
	<label>Referans Açıklaması</label>
	<textarea class="form-control" asp-for="Description" rows="5" style="border:1px solid black;"></textarea>
	<br />
	<button class="btn btn-primary">Referansı Kaydet</button>
</form>

