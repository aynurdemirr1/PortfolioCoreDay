@model Service

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Servis Güncelle</h2>

<form method="post">
    <input type="hidden" asp-for="ServiceId" />
    <label>Konu</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid black" />
    <br />
    <label>Unvan</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid black" />
    <br />
    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control" style="border:1px solid black" />    
    <br />
    <button class="btn btn-success">Servisi Güncelle</button>
</form>