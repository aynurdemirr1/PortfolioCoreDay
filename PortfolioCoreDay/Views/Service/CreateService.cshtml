@model Service

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Yeni Servis Ekleme</h2>

<form method="post">
    <label>Firma Adı</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid black" />
    <br />
    <label>Unvan</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid black" />
    <br />    
    <input type="hidden" asp-for="Status" value="1" />
    <button class="btn btn-primary">Servisi Kaydet</button>
</form>