@model Portfolio

@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Deneyim Güncelleme Sayfası</h2>


<form method="post">
    <input type="hidden" asp-for="PortfolioId" />
    <label>Proje Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid black" />
    <br />
    <label>Proje Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid black" />
    <br />
    <label>Proje Github Url</label>
    <input type="text" asp-for="GithubUrl" class="form-control" style="border:1px solid black" />
    <br />
    <label>Proje Görseli</label>
    <input type="text" asp-for="ImageUrl" class="form-control" style="border:1px solid black" />
    <br />
    <label>Proje Kategorisi</label>
    <select asp-for="CategoryId" asp-items="ViewBag.v1" class="form-control" style="border:1px solid black">
        <option value="">--Kategori Seçiniz--</option>
    </select>
    <br />
    <button class="btn btn-success">Deneyimi Güncelle</button>
</form>