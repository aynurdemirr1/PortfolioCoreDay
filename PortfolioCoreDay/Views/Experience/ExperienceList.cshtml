@model List<Experience>

@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Deneyim Listesi</h2>

<table class="table table-borded">
    <tr>
        <th>#</th>
        <th>Firma Adı</th>
        <th>Unvan</th>
        <th>Çalışma Tarihleri</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExperienceId</td>
            <td>@item.CompanyName</td>
            <td>@item.Title</td>
            <td>@item.ExperienceDate</td>
            <td>@item.Description</td>

            <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim Girişi</a>